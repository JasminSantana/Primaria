<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.utng.primaria.MainActivity"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:columnCount="6"
            android:rowCount="11"
            android:padding="16dp"
            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_activity_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/verde"
                android:layout_column="4"
                android:layout_row="1"
                android:layout_gravity="center"
                android:src="@drawable/activity1"
                android:padding="5dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_al_nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="2"
                android:layout_gravity="center"
                android:textColor="#797E7F"
                android:textStyle="bold"/>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_activity_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#D8D8D8"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_an_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_gravity="center"
                android:textColor="#797E7F"
                android:textStyle="bold"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_activity_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#D8D8D8"
                android:layout_column="5"
                android:layout_row="3"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_fa_ro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="4"
                android:layout_gravity="center"
                android:textColor="#797E7F"
                android:textStyle="bold"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_activity_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#D8D8D8"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_fg_de"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_gravity="center"
                android:textColor="#797E7F"
                android:textStyle="bold"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_activity_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#D8D8D8"
                android:layout_column="5"
                android:layout_row="6"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_ob_ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="7"
                android:layout_gravity="center"
                android:textColor="#797E7F"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="@string/certificate"
                android:layout_column="4"
                android:layout_row="10"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/bt_certificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/certificate"
                android:layout_column="4"
                android:layout_row="9"
                android:layout_gravity="center"
                android:backgroundTint="#FFF700"
                />

        </GridLayout>

    </ScrollView>

</LinearLayout>

